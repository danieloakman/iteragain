  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "TS-Node: Launch Current File",
      "program": "${file}",
      "args": [],
      "autoAttachChildProcesses": false,
      "outputCapture": "std",
      "skipFiles": ["<node_internals>/**"],
      "runtimeArgs": ["-r", "ts-node/register"]
    },
    {
      "name": "Attach to Node Debug Process",
      "port": 9229,
      "request": "attach",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    },
  ]
}
